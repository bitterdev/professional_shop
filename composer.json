{
  "name": "bitterdev/professional_shop",
  "description": "Starting point package to install a professional shop.",
  "type": "project",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "ext-json": "*",
    "ext-simplexml": "*",
    "bitterdev/bitter_shop_system": "dev-master",
    "bitterdev/bitter_theme": "dev-master",
    "composer/installers": "^1.3",
    "concrete5/core": "9.3.x",
    "concrete5/dependency-patches": "^1.6.1",
    "gajus/dindent": "^2.0",
    "paypal/rest-api-sdk-php": "^1.14",
    "setasign/fpdf": "^1.8",
    "setasign/fpdi": "^2.3",
    "sofort/sofortlib-php": "3.*",
    "symfony/property-access": "^5.3",
    "vlucas/phpdotenv": "^2.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.0",
    "mockery/mockery": "^1.2"
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "mlocati/composer-patcher": true,
      "kylekatarnls/update-helper": true
    },
    "preferred-install": "dist",
    "sort-packages": true
  },
  "extra": {
    "allow-subpatches": [
      "concrete5/dependency-patches"
    ],
    "installer-paths": {
      "public/concrete": [
        "type:concrete5-core"
      ],
      "public/application/themes/{$name}": [
        "type:concrete5-theme"
      ],
      "public/packages/{$name}": [
        "type:concrete5-package"
      ],
      "public/application/blocks/{$name}": [
        "type:concrete5-block"
      ]
    }
  },
  "repositories": {
    "bitter_shop_system": {
      "type": "package",
      "package": {
        "name": "bitterdev/bitter_shop_system",
        "version": "dev-master",
        "source": {
          "url": "git@github.com:bitterdev/bitter_shop_system.git",
          "type": "git",
          "reference": "main"
        }
      }
    },
    "bitter_theme": {
      "type": "package",
      "package": {
        "name": "bitterdev/bitter_theme",
        "version": "dev-master",
        "source": {
          "url": "git@github.com:bitterdev/bitter_theme.git",
          "type": "git",
          "reference": "main"
        }
      }
    }
  },
  "scripts": {
    "post-update-cmd": [
      "ln -sf ../../vendor/bitterdev/bitter_shop_system public/packages/bitter_shop_system",
      "ln -sf ../../vendor/bitterdev/bitter_theme public/packages/bitter_theme"
    ],
    "post-install-cmd": [
      "ln -sf ../../vendor/bitterdev/bitter_shop_system public/packages/bitter_shop_system",
      "ln -sf ../../vendor/bitterdev/bitter_theme public/packages/bitter_theme"
    ]
  }
}
